<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sondre.kjokkenkompis.MainActivity">

    <RelativeLayout
        android:id="@+id/recipeTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.1"
            android:text="Tittel: "
            android:textColor="@color/white"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/RecipeListName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/Title"
            android:layout_toRightOf="@+id/Title"
            android:background="#84fab0"
            android:gravity="center_horizontal"
            android:hint="..."
            android:textAlignment="center" />

        <EditText
            android:id="@+id/Approach"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="430dp"
            android:background="#84fab0"
            android:gravity="center_horizontal"
            android:hint="..."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Ingredienser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.1"
            android:text="Ingredienser: "
            android:textColor="@color/white"
            android:textSize="25dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="120dp"
            android:background="#8fd3f4"
            android:padding="4dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/txtApproach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.1"
            android:text="Fremgangsmåte: "
            android:textColor="@color/white"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/et_insert"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="340dp"
            android:background="#84fab0"
            android:hint="Navn på vare"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btn_insert"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="335dp"
            android:backgroundTint="#84fab0"
            android:text="Legg til"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnAddRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:backgroundTint="#84fab0"
            android:textColor="@color/black"
            android:text="Legg til oppskrift" />

    </RelativeLayout>

</RelativeLayout>